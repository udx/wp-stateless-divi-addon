{
  "name": "udx/wp-stateless-divi-addon",
  "description": "Ensures compatibility with Divi theme.",
  "type": "wordpress-plugin",
  "license": "MIT",
  "authors": [
    {
      "name": "UDX",
      "email": "info@udx.io"
    }
  ],
  "minimum-stability": "stable",
  "require": {},
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  },
  "autoload": {
    "files": [
      "class-divi.php"
    ]
  },
  "scripts": {
    "test": [
      "@composer install",
      "./vendor/bin/phpunit --prepend tests/prepend.php tests/ --testdox"
    ],
    "release": [
      "sh build.sh"
    ]
  },
  "scripts-descriptions": {
    "test": "Run all tests.",
    "release": "Release a new plugin version. Example: `composer release 1.2.1`"
  }
}
